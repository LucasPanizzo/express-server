    {{> navbar}}
   {{#if isAdmin}}
    <div class="container px-3 my-5 clearfix">
        <!-- Shopping cart table -->
        <div class="card">
            <div class="card-header">
                <h2>User Panel</h2>
            </div>
            <div class="card-body">
                {{#if users.length}}
                <div class="table-responsive">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <!-- Set columns width -->
                                <th class="text-center py-3 px-4" style="min-width: 400px;">Detalles del usuario</th>
                                <th class="text-right py-3 px-4" style="width: 100px;">Modificar Rol</th>
                                <th class="text-center align-middle py-3 px-0" style="width: 40px;">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr class="productCard">
                                <td class="p-4">
                                    <div class="media align-items-center">
                                        <img src="{{productId.thumbnails}}" class="d-block ui-w-40 ui-bordered mr-4"
                                            alt="">
                                        <div class="media-body">
                                            <a href="#" class="d-block text-dark">{{first_name}} {{last_name}}</a>
                                            <small>
                                                <span class="text-muted">Email:</span> {{email}}&nbsp;
                                                <span class="text-muted">Rol: </span> {{rol}}
                                                &nbsp;
                                                <span class="text-muted">Ult. vez: </span> {{lastConnection}}
                                                &nbsp;
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-right font-weight-semibold align-middle p-4">
                                    <button class="btnUserRole" onclick="changeRol('{{_id}}')">User/Premium</button>
                                </td>
                                <td class="text-center align-middle px-0">
                                    <button class="btnUserDel" onclick="deleteUser('{{_id}}')">Eliminar</button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <h2 class="title-prod">Carrito vacio</h2>
                <button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3"
                    onclick="location.href='/products'">Volver a la tienda</button>
                {{/if}}
            </div>
        </div>
    </div>
   {{else}}
   <h2>Solo para administradores.</h2>
   {{/if}}

    <script src="js/usersManagement.js" type="text/javascript"></script>