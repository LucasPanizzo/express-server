{{> navbar}}
{{#if products.length}}
<div class="container d-flex justify-content-center mt-50 mb-50">
    <div class="row">
        <div class="col-md-10 ">
            {{#each products}}
            <div class="card card-body product-card">
                <div
                    class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                    <div class="mr-2 mb-3 mb-lg-0">

                        <img src="{{thumbnails}}" width="130" height="150" alt="">

                    </div>

                    <div class="media-body">
                        <h6 class="media-title font-weight-semibold">
                            <a href="#" data-abc="true" id="product-title">{{title}}</a>
                        </h6>

                        <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                            <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">{{category}}</a>
                            </li>
                        </ul>

                        <p class="mb-3">{{description}}</p>
                    </div>

                    <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                        <h3 class="mb-0 font-weight-semibold">${{price}}</h3>

                        <div>
                            <p class="mb-3">Stock: {{stock}}</p>
                        </div>


                        <button type="button" class="btn btn-warning mt-4 text-white add-butt"
                            onclick="addToCart('{{_id}}')"><i class="icon-cart-add mr-2"></i> Añadir al carrito</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{else}}
<p>No se encontraron productos</p>
{{/if}}
</div>
<div>
    <p>Páginas</p>
    <div>
        {{#each pages}}
            <button onclick="location.href='/products?page={{this}}'">{{this}}</button>
        {{/each}}
    </div>
</div>


<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="js/products.js" type="text/javascript"></script>